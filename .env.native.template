# Trading System - Native Deployment Configuration
# Copy this file to .env.local and update with your settings

# ============================================================================
# ENVIRONMENT
# ============================================================================
ENVIRONMENT=development
LOG_LEVEL=INFO

# ============================================================================
# DATABASE (PostgreSQL)
# ============================================================================
# Full connection URL (recommended)
DATABASE_URL=postgresql://trading:YOUR_PASSWORD_HERE@localhost:5432/trading

# Or individual components
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=trading
POSTGRES_USER=trading
POSTGRES_PASSWORD=YOUR_PASSWORD_HERE

# ============================================================================
# CACHE (Redis)
# ============================================================================
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# ============================================================================
# API CONFIGURATION
# ============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true
API_WORKERS=1

# CORS Settings
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,http://127.0.0.1:5173

# ============================================================================
# SECURITY
# ============================================================================
# Generate a secure random key for production:
# python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=dev-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=60

# ============================================================================
# EXECUTION GATEWAY (Rust)
# ============================================================================
GATEWAY_HOST=0.0.0.0
GATEWAY_PORT=3000
GATEWAY_WS_PORT=3001

# ============================================================================
# FRONTEND (React/Vite)
# ============================================================================
VITE_API_BASE_URL=http://localhost:8000
VITE_WS_BASE_URL=ws://localhost:8000
VITE_GATEWAY_WS_URL=ws://localhost:3001

# ============================================================================
# MONITORING (Optional)
# ============================================================================
PROMETHEUS_URL=http://localhost:9090
PROMETHEUS_PORT=9090
GRAFANA_URL=http://localhost:3001
GRAFANA_PORT=3001
GRAFANA_PASSWORD=admin

# ============================================================================
# LOGGING
# ============================================================================
LOG_FORMAT=json
LOG_DIR=./logs
LOG_ROTATION_SIZE=100MB
LOG_RETENTION_DAYS=30

# ============================================================================
# TRADING SYSTEM
# ============================================================================
# Risk Management
MAX_POSITION_SIZE_PCT=2.0
MAX_PORTFOLIO_EXPOSURE_PCT=20.0
DAILY_DRAWDOWN_LIMIT_PCT=8.0
MONTHLY_DRAWDOWN_LIMIT_PCT=20.0
MAX_LEVERAGE=10.0
DEFAULT_LEVERAGE=3.0

# Orchestrator
CHECK_INTERVAL_SECONDS=900
MAX_CONCURRENT_ANALYSES=10

# Execution
RETRY_ATTEMPTS=3
RETRY_BACKOFF_SECONDS=1
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT_SECONDS=60

# LLM Configuration
LLM_DEFAULT_TIMEOUT_SECONDS=30
LLM_MAX_TOKENS=4000
LLM_TEMPERATURE=0.1

# ============================================================================
# EXCHANGE API KEYS (Add your keys here)
# ============================================================================
# BINANCE_API_KEY=your_api_key_here
# BINANCE_API_SECRET=your_api_secret_here
# COINBASE_API_KEY=your_api_key_here
# COINBASE_API_SECRET=your_api_secret_here

# ============================================================================
# LLM API KEYS (Add your keys here)
# ============================================================================
# OPENAI_API_KEY=your_openai_key_here
# ANTHROPIC_API_KEY=your_anthropic_key_here
# GOOGLE_API_KEY=your_google_key_here
