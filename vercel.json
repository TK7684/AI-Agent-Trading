{
  "version": 2,
  "name": "ai-trading-system",
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/index.py"
    },
    {
      "src": "/(.*)",
      "dest": "api/index.py"
    }
  ],
  "env": {
    "PYTHON_VERSION": "3.11"
  },
  "functions": {
    "api/index.py": {
      "runtime": "python3.11",
      "maxDuration": 30
    }
  },
  "cron": [
    {
      "path": "/api/cron/training",
      "schedule": "0 */6 * * *"
    },
    {
      "path": "/api/cron/strategy-update",
      "schedule": "0 2 * * *"
    },
    {
      "path": "/api/cron/market-analysis",
      "schedule": "*/30 * * * *"
    }
  ]
}
