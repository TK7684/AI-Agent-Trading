{
  "version": 2,
  "name": "ai-trading-system",
  "framework": null,
  "buildCommand": "pip install -r requirements.txt",
  "outputDirectory": "",
  "installCommand": "pip install -r requirements.txt",
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python"
    },
    {
      "src": "api/functions/*.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.py"
    },
    {
      "src": "/trading/(.*)",
      "dest": "/api/functions/trading.py"
    },
    {
      "src": "/training/(.*)",
      "dest": "/api/functions/training.py"
    },
    {
      "src": "/strategies/(.*)",
      "dest": "/api/functions/strategies.py"
    },
    {
      "src": "/market/(.*)",
      "dest": "/api/functions/market.py"
    },
    {
      "src": "/health",
      "dest": "/api/functions/health.py"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ],
  "env": {
    "PYTHON_VERSION": "3.11"
  },
  "functions": {
    "api/index.py": {
      "runtime": "python3.11",
      "maxDuration": 30
    },
    "api/functions/training.py": {
      "runtime": "python3.11",
      "maxDuration": 300
    },
    "api/functions/strategies.py": {
      "runtime": "python3.11",
      "maxDuration": 60
    }
  },
  "cron": [
    {
      "path": "/api/cron/training",
      "schedule": "0 */6 * * *"
    },
    {
      "path": "/api/cron/strategy-update",
      "schedule": "0 2 * * *"
    },
    {
      "path": "/api/cron/market-analysis",
      "schedule": "*/30 * * * *"
    }
  ]
}
